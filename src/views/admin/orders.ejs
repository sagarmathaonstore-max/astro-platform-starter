
<%- include('../partials/header') %>
<h1>Orders</h1>
<table class="table">
  <thead>
    <tr>
      <th>ID</th><th>Date</th><th>Customer</th><th>Total</th><th>Payment</th><th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td>#<%= o.id %></td>
        <td><%= o.created_at %></td>
        <td><%= o.customer_name %> (<%= o.email %>)<br><span class="muted"><%= o.address %>, <%= o.city %></span></td>
        <td>NPR <%= o.total %></td>
        <td><%= o.payment_method.toUpperCase() %></td>
        <td><%= o.payment_status %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
